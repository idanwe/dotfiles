[include]
  path = ~/.dotlocal/gitconfig
[diff]
[color]
  ui = auto
  diff = auto

[alias]
  pl = pull --rebase
  pm = pull-me
  ps = push
  st = status
  ci = commit
  co = checkout
  di = diff
  dc = diff --cached
  amend = commit --amend
  famend = commit --amend --no-edit
  author = commit --amend --no-edit --reset-author
  aa = add --all
  head = !git l -1
  h = !git head
  r = !git l -20
  ra = !git r --all
  ff = merge --ff-only
  pullff = pull --ff-only
  noff = merge --no-ff
  l = log --graph --abbrev-commit --date=relative
  la = !git l --all
  div = divergence
  gn = goodness
  gnc = goodness --cached
  fa = fetch --all
  pom = push origin master
  b = branch
  ba = branch -a
  ds = diff --stat=160,120
  dh1 = diff HEAD~1
  aliases = config --get-regexp alias
  unstage = reset HEAD
  uncommit = reset --soft HEAD^
  # from http://www.codedevelopr.com/articles/export-a-git-branch-to-zip-file-with-alias/
  zip = "!zipArchive() { git archive --format zip --output $1 $2; }; zipArchive"
  tgz = "!zipArchive() { git archive --format tgz --output $1 $2; }; zipArchive"
  changes = log --pretty=format:'* %C(yellow)%s%Creset %C(black)(%cr)%Creset'

  sl = stash list
  save = stash save --patch
  eat = stash
  poop = stash pop
  sb = status -sb
  remotes = remote -v
  plus = commit -a --amend --no-edit
  fm = log --format=%B -n 1

[format]
  pretty=format:%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset

[merge]
  tool = vimdiff

[push]
  default = current

[core]
  editor = /usr/bin/nano
#  pager =
;[credential]
	;helper = osxkeychain
